{
  "name": "comark-monorepo",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@10.30.1",
  "description": "Comark monorepo",
  "author": "",
  "license": "MIT",
  "repository": "comarkdown/comark",
  "scripts": {
    "dev": "pnpm dev:vue",
    "dev:playground": "nuxt dev playground",
    "dev:prepare": "nuxt prepare playground",
    "dev:react": "pnpm --filter comark-react-vite run dev",
    "dev:vue": "pnpm --filter comark-vue-vite run dev",
    "dev:vue:mermaid": "pnpm --filter comark-vue-vite-mermaid run dev",
    "dev:vue:math": "pnpm --filter comark-vue-vite-math run dev",
    "dev:vue:cjk": "pnpm --filter comark-vue-vite-cjk run dev",
    "dev:astro": "pnpm --filter comark-astro run dev",
    "dev:vitepress": "pnpm --filter comark-vitepress run dev",
    "dev:nuxt": "pnpm --filter comark-nuxt run dev",
    "dev:nuxt-ui": "pnpm --filter comark-nuxt-ui run dev",
    "benchmark": "pnpm --filter comark run benchmark",
    "docs": "nuxt dev --extends docus docs",
    "prepack": "pnpm build",
    "build": "pnpm --filter './packages/**' run build",
    "test": "pnpm --filter 'comark' run test && pnpm --filter '@comark/*' run test",
    "test:spec": "cd packages/comark && pnpm vitest run test/index.test.ts -- -spec",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "verify": "pnpm run lint && pnpm run test && pnpm run typecheck",
    "release": "pnpm --filter 'comark' run release && pnpm --filter '@comark/cjk' run release && pnpm --filter '@comark/math' run release",
    "release:dry": "pnpm --filter 'comark' run release:dry && pnpm --filter '@comark/cjk' run release:dry && pnpm --filter '@comark/math' run release:dry",
    "postinstall": "pnpm --filter 'comark' run build --stub && pnpm --filter '@comark/*' run build --stub"
  },
  "devDependencies": {
    "@nuxt/eslint-config": "^1.15.1",
    "@release-it/conventional-changelog": "^10.0.5",
    "@types/node": "^25.3.0",
    "@vitejs/plugin-vue": "^6.0.4",
    "eslint": "^10.0.0",
    "nuxt": "^4.3.1",
    "release-it": "^19.2.4",
    "remark-gfm": "^4.0.1",
    "remark-mdc": "^3.10.0",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.2",
    "scule": "^1.3.0",
    "typescript": "^5.9.3",
    "unified": "^11.0.5"
  }
}
