{
  "compilerOptions": {
    "target": "es2024",
    "lib": ["esnext", "DOM", "DOM.Iterable"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": ["packages/**/*"],
  "exclude": ["playground", "examples", "node_modules", "dist", "**/dist", "**/node_modules"]
}
